{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}

<form method="post" action="/dashboard/updateCustomer">

  <div class="form-group required">
    <label class="control-label">Customer Name</label>
    <input type="text" class="form-control" name="customerName" value="{{customerName}}" placeholder="Customer Name"/>
  </div>

  <div class="form-group required">
    <label class="control-label">Locations</label>
    <input type="text" class="form-control" name="locations" value="{{locations}}"
            placeholder="Comma-separated Locations. Ex: Boston,Montreal,Toronto"/>
  </div>

  <button type="submit" class="btn btn-default">Update</button>
  <button type="submit" class="btn btn-default" formaction="/dashboard/cancelCustomer">Cancel</button>

</form>