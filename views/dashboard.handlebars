{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}

<div class="header clearfix">
<nav>
  <ul class="nav nav-pills pull-right">
    <form method="get" action="/dashboard/addCustomer">
      <button type="submit" class="btn btn-default">Add Customer</button>
    </form>
  </ul>
</nav>

{{#if customers}}
<h4 class="text-muted">Customers</h4>
  <div>
      <table class="table table-bordered">
        <thead>
            <th>Name</th>
            <th>Locations</th>
            <th/>
        </thead> 
        <tbody> 
            {{#each customers}}
            <tr>
                <td><form method="post" action="/customer">
                      <input type="hidden" name="customerId" value="{{_id}}"/>
                      <input type="hidden" name="customerName" value="{{customerName}}"/>
                      <input type="hidden" name="locations" value="{{locations}}"/>
                      <button type="submit" class="btn btn-link">{{customerName}}</button>
                    </form>
                </td>
                <td><form method="post" action="/customer">
                      <input type="hidden" name="customerId" value="{{_id}}"/>
                      <input type="hidden" name="customerName" value="{{customerName}}"/>
                      <input type="hidden" name="locations" value="{{locations}}"/>
                      <button type="submit" class="btn btn-link">{{locations}}</button>
                    </form>
                </td>
                <td width="50"><form method="post" action="/dashboard/editCustomer">
                                  <input type="hidden" name="customerId" value="{{_id}}"/>
                                  <input type="hidden" name="customerName" value="{{customerName}}"/>
                                  <input type="hidden" name="locations" value="{{locations}}"/>
                                  <button type="submit" class="glyphicon glyphicon-pencil btn btn-link"/>
                                </form>
                </td>
            </tr> 
            {{/each}} 
        </tbody> 
    </table>
  </div>
{{/if}}